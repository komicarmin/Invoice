<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hauw.invoice.naslovnik">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustvari"
        android:onClick="clickUstvari"
        android:id="@+id/btnUstvari"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STRANKA"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnUstvari"
        android:layout_alignStart="@+id/btnUstvari" />

    <EditText
        android:hint="Ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etImeStranke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <EditText
        android:hint="Priimek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPriimekStranke"
        android:layout_below="@+id/etImeStranke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Naslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNaslovStranke"
        android:layout_below="@+id/etPriimekStranke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etHisnaSt"
        android:hint="Hišna št."
        android:layout_below="@+id/etPriimekStranke"
        android:layout_toRightOf="@+id/etNaslovStranke" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPosta"
        android:layout_below="@+id/etNaslovStranke"
        android:hint="Pošta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/etHisnaSt"
        android:layout_toStartOf="@+id/etHisnaSt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPostnaSt"
        android:hint="Poštna št."
        android:layout_alignTop="@+id/etPosta"
        android:layout_toRightOf="@+id/etPosta"
        android:layout_toEndOf="@+id/etPosta" />

</RelativeLayout>
