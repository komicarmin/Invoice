<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hauw.invoice" >

    <!-- To access Google+ APIs: -->
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".welcome"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profiles"
            android:label="@string/title_activity_profiles"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".vpis"
            android:label="@string/title_activity_vpis"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".sestavljanje"
            android:label="@string/title_activity_sestavljanje"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".meni"
            android:label="@string/title_activity_meni"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".naslovnik"
            android:label="@string/title_activity_naslovnik"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".predracuni"
            android:label="@string/title_activity_predracuni"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".sestavljanjeListView"
            android:label="@string/title_activity_sestavljanje_list_view"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
